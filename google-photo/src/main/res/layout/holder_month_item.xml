<?xml version="1.0" encoding="utf-8"?>
<!-- 图片列表图片项Holder布局 -->
<com.example.jiaojiejia.googlephoto.view.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background_1"/>

    <!-- 图片 -->
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 选中标记 -->
    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/selector_gallery_item"/>

    <!-- 选满后显示 -->
    <View
        android:id="@+id/mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/photo_item_mask"/>

    <!-- 分辨率不符合 -->
    <TextView
        android:id="@+id/iv_unsuit_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gallery_item_unsuit"
        android:gravity="center"
        android:text="@string/not_suit_size"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"/>

    <!-- 比例不合适 -->
    <TextView
        android:id="@+id/iv_unsuit_ratio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gallery_item_unsuit"
        android:gravity="center"
        android:text="@string/not_suit_ratio"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone"/>

    <!-- 已使用标识 -->
    <ImageView
        android:id="@+id/iv_used"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/photo_used"
        android:visibility="gone"/>

</com.example.jiaojiejia.googlephoto.view.SquareRelativeLayout>