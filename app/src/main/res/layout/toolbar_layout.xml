<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="3dp"
    android:minHeight="?attr/actionBarSize"
    android:gravity="center_vertical"
    android:fitsSystemWindows="true"
    app:contentInsetLeft="10dp"
    app:contentInsetStart="10dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <com.example.jiaojiejia.googlephoto.view.DrawableTextView
        android:id="@+id/dtv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textColor="@color/translucent"
        android:text="@string/back"
        android:textSize="16sp"
        app:leftDrawable="@drawable/back_btn"
        app:leftDrawableHeight="22dp"
        app:leftDrawableWidth="12dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <com.example.jiaojiejia.googlephoto.view.DrawableTextView
        android:id="@+id/dtv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textColor="@color/save_page"
        android:textSize="16sp"/>

</android.support.v7.widget.Toolbar>
